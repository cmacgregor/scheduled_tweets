<h1>Forgot your password?</h1>

<%= form_with url: password_reset_path do |form| %>
<div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "bobbie.hill@propaniacs.com"%>
    </div>

    <div class="mb-3">
        <%= form.submit "Get Started", data: { turbo: false}, class: "btn btn-primary"%>        
    </div>
<% end %>